h3.text-center {{title}}
form
	.row
		.form-group
			label(for="InputName") Имя
			input.form-control(type="text" name="InputName" ng-model="user.name" placeholder="Имя контакта")
	.row
		.form-group
			label(for="InputLastName") Фамилия
			input.form-control(type="text" name="InputLastName" ng-model="user.lastname" placeholder="Фамилия контакта")
	.row
		b Контактная информация
		.input-group.contact__input
			.input-group-addon
				i.glyphicon.glyphicon-envelope
			input.form-control(type="text" id="InputMail" ng-model="user.mail" placeholder="example@gmail.com")
		.input-group.contact__input
			.input-group-addon
				i.glyphicon.glyphicon-phone
			input.form-control(type="text" id="InputPhone" ng-model="user.tel" placeholder="+7 978 657 75 64")
	button.btn.btn-success(type="submit" ng-disabled="!user" ng-click="contactsAdd(user)") Добавить
	button.btn.btn-warning(type="submit") Отменить
